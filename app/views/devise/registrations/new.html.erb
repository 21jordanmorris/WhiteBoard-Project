<div class="user-container">
  <div class="devise-name">
    <a id="name-link" href="../home/index"><h2>sign<span id='board-name'>Up</span></h2></a>
  </div>

  <%= devise_error_messages! %>

  <div class="user-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="email field">
        <!--<%= f.label :email %><br />-->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", spellcheck: "false" %>
      </div>

      <div class="password field">
        <!--<%= f.label :password %>-->
        <% if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)" %>
        <% else %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        <% end %>
      </div>

      <div class="passwordConfirmation field">
        <!--<%= f.label :password_confirmation %><br />-->
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'submit-button' %>
      </div>
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
