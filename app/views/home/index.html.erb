<!DOCTYPE html>
<html> 
	<head> 
		<meta charset="utf-8"/>
		<title>Bootstrap grid </title> 


		<!-- We link the CDN css files here --> 
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="app/assets/stylesheets/bootstrap.min.css" > 
		<!-- Optional theme -->
		<link rel="stylesheet" href="app/assets/stylesheets/bootstrap-theme.min.css">

	</head>
	<body>
	<div class="home-info-buttons">
		<div class="nav-buttons">
			<%= link_to 'INFORMATION', "../home/info", :class=>"btn btn-Dark" %>
			<%= link_to 'MY WHITEBOARDS', '../whiteboards', :class=>"btn btn-Dark" %>
			<%= link_to 'CREATE NEW', '../whiteboards/new', :class=>"btn btn-Dark" %>
		</div>

		<div class="user-account-buttons">
			<% if current_user %>
				<%= link_to current_user.email, edit_user_registration_path, :class=>"btn btn-Dark"%>
				<%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete, :class=>"btn btn-Dark" %>
			<% else %>
				<%= link_to 'LOG IN', new_user_session_path, :class=>"btn btn-Dark" %>
				<%= link_to 'SIGN UP', new_user_registration_path, :class=>"btn btn-Dark" %>
			<% end %>
		</div>
	</div>


		<div class="container main-header">
			<div class="row">
				<div class="col-xs-12">
					<div class="jumbotron">
  						<h1>Welcome to Whiteboard!</h1>
  						<p>Collaborating Whiteboard</p>
				</div>
				</div>
			</div>
	
</div>


	<!-- Javascript files should be linked at the bottom of the page --> 
		<script src="app/assets/javascripts/jquery.min.js"></script>
	<!-- Latest compiled and minified JavaScript -->
		<script src="app/assets/javascripts/bootstrap.min.js"></script>
	</body>
</html>