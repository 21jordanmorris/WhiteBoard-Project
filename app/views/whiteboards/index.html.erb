<body class='whiteboard-container'>
  <nav class="nav-bar">
    <div class="name">
      <!-- Link to Homepage -->
      <h2>your<span id='board-name'>Whiteboards</span></h2>
    </div>

    <ul class="nav-links">
      <li><a href='../whiteboards/new'>Create New</a></li>
      <li><a href=<%= edit_user_registration_path %>><%= @username %></a></li>
      <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
    </ul>
  </nav>

  <div class="whiteboard-cards">
    <% @whiteboards.each do |whiteboard| %>
      <!--<% if current_user.email == whiteboard.creator_email %>-->
      <div class="card-container">
        <div class="whiteboard-image-container">
            <% if Rails.application.assets.find_asset(whiteboard.hash_id+'.png') != nil%>
                <%= image_tag((whiteboard.hash_id+'.png'), class:'whiteboard-image')%>
                <!--<img class="whiteboard-image" src ="https://s3.amazonaws.com/whiteboard-csc3380/<%= whiteboard.id %>?<%= rand(0..1000) %>"  crossorigin="anonymous">
            --><% else %>
                <%= image_tag('no_save_image.png', class:'whiteboard-image no-whiteboard-image')%>
            <% end %>
        </div>
        <div class="whiteboard-title">
          <div class="whiteboard-text"><%= whiteboard.title %></div>
        </div>
        <button class="whiteboard-button"><%= link_to "Use Whiteboard", whiteboard, class: 'goto-link'%></button>
      </div>
      <% end %>
    <% end %>
  </div>
</body>